{
  "name": "lean-js-app-starter",
  "version": "0.0.1",
  "description": "",
  "main": "src/server/main.js",
  "scripts": {
    "setup": "npm i && npm run flow-typed install",
    "back:api:start:dev:watch": "nodemon -e js,jsx,json --watch config/server --watch config/common --watch src --exec \"npm run back:build:dev && npm run back:start:dev\"",
    "back:api:start:dev:watch:debug": "nodemon -e js,jsx,json --watch config/server --watch config/common --watch src --exec \"npm run back:build:dev && npm run back:start:dev:debug\"",
    "back:build": "webpack --env production --config config/server/index.js",
    "back:build:debug": "node --inspect-brk node_modules/.bin/webpack --env production --config config/server/index.js",
    "back:build:dev": "webpack --env development --config config/server/index.js",
    "back:build:dev:debug": "node --inspect-brk node_modules/.bin/webpack --env development --config config/server/index.js",
    "back:build:dev:stats": "npm run back:build:dev -- --json > stats.json",
    "back:build:stats": "npm run back:build -- --json > stats.json",
    "back:start": "node build/server/production/server.js",
    "back:start:debug": "node --inspect-brk build/server/production/server.js",
    "back:start:dev": "node build/server/development/server.js",
    "back:start:dev:debug": "node --inspect-brk build/server/development/server.js",
    "back:ssr:start:dev:watch": "nodemon -e js,jsx,json --watch config --watch src --exec \"npm run front:build:dev && npm run back:build:dev && npm run back:start:dev\"",
    "back:ssr:start:dev:watch:debug": "nodemon -e js,jsx,json --watch config --watch src --exec \"npm run front:build:dev && npm run back:build:dev && npm run back:start:dev:debug\"",
    "back:test": "jest src/server",
    "back:test:coverage": "jest src/server --coverage",
    "back:test:update": "jest src/server -u",
    "back:test:watch": "jest src/server --watch",
    "build": "npm run front:build && npm run back:build",
    "flow": "flow",
    "flow-typed": "flow-typed",
    "front:build": "webpack --env production --config config/client/index.js",
    "front:build:debug": "node --inspect-brk node_modules/.bin/webpack --env production --config config/client/index.js",
    "front:build:dev": "webpack --env development --config config/client/index.js",
    "front:build:dev:debug": "node --inspect-brk node_modules/.bin/webpack --env development --config config/client/index.js",
    "front:build:dev:stats": "npm run front:build:dev -- --json > stats.json",
    "front:build:stats": "npm run front:build -- --json > stats.json",
    "front:start": "http-server ./build/client/production -p 9090",
    "front:start:dev": "http-server ./build/client/development -p 9090",
    "front:start:dev:watch": "nodemon --watch config/client --watch config/common --exec \"webpack-dev-server --env development --config config/client/index.js\"",
    "front:test": "jest src/client",
    "front:test:coverage": "jest src/client --coverage",
    "front:test:update": "jest src/client -u",
    "front:test:watch": "jest src/client --watch",
    "lint": "eslint --cache --ext .js,.jsx src/",
    "lint:styles": "stylelint src/**/*.scss src/**/*.css",
    "start": "npm run back:start",
    "start:dev": "npm run back:ssr:start:dev:watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:update": "jest -u",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IsaacLean/lean-js-app-starter.git"
  },
  "author": "Matthew Lean",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IsaacLean/lean-js-app-starter/issues"
  },
  "homepage": "https://github.com/IsaacLean/lean-js-app-starter#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cross-fetch": "^2.2.2",
    "express": "^4.16.4",
    "helmet": "^3.13.0",
    "moment": "^2.22.2",
    "mongoose": "^5.2.10",
    "normalizr": "^3.3.0",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-hot-loader": "^4.3.11",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-modules-commonjs": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "asset-list-webpack-plugin": "^0.2.0",
    "autoprefixer": "^9.1.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.0",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "cssnano": "^4.1.0",
    "deep-freeze": "0.0.1",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.7.0",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-jest": "^21.25.0",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "flow-bin": "^0.83.0",
    "flow-typed": "^2.5.1",
    "flow-webpack-plugin": "^1.2.0",
    "glob": "^7.1.3",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "jest": "^23.6.0",
    "jsdom": "^12.0.0",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss": "^7.0.2",
    "postcss-loader": "^3.0.0",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "react-test-renderer": "^16.5.0",
    "regenerator-runtime": "^0.12.1",
    "sass-loader": "^7.1.0",
    "source-map-support": "^0.5.9",
    "style-loader": "^0.23.0",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "superagent": "^3.8.3",
    "supertest": "^3.1.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  }
}
